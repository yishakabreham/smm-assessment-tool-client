<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.windowProjectList">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbProjectList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:theme="@style/ToolBarStyle"
        android:background="@color/colorPrimary"/>
    <RelativeLayout
        android:id="@+id/rLNoProject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="No projects have been created yet!"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/blueBlackDark"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/lstProjectList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tbProjectList"/>
</RelativeLayout>