<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.windowCreateProject">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbCreateProject"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:theme="@style/ToolBarStyle"
        android:background="@color/colorPrimary">
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tbCreateProject"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rlTin"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_relative_layout">
                    <TextView
                        android:id="@+id/lblTIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Project Name *"
                        android:textColor="@color/blueBlackDark"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imageSearch"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblTIN"
                        android:layout_alignLeft="@id/lblTIN"
                        android:src="@drawable/icon_clipboard" />
                    <EditText
                        android:id="@+id/txtProjectName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@id/imageSearch"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/imageSearch"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/open_sans_regular"
                        android:maxLength="25"
                        android:hint="Enter Name of the Project"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:textColor="@color/blueBlack"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlUserName"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rlTin">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_relative_layout">
                    <TextView
                        android:id="@+id/lblUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Client *"
                        android:textColor="@color/blueBlackDark"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imageUser"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblUserName"
                        android:layout_alignLeft="@id/lblUserName"
                        android:src="@drawable/icon_user" />
                    <EditText
                        android:id="@+id/txtClientName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/imageUser"
                        android:layout_alignTop="@id/imageUser"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/open_sans_regular"
                        android:hint="Enter Name of the Client"
                        android:maxLength="25"
                        android:textSize="18dp"
                        android:gravity="center|left"
                        android:textColor="@color/blueBlack"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rlUserName">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Kickoff Date *"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imagePassword"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblPassword"
                        android:layout_alignLeft="@id/lblPassword"
                        android:src="@drawable/icon_calendar_"/>
                    <EditText
                        android:id="@+id/txtProjectStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imagePassword"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Project Kickoff Date"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="18dp"
                        android:textColor="@color/blueBlack"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imagePassword"
                        android:inputType="text"
                        android:gravity="left|center"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlPhone"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rlPassword">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/lblPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Project Completion"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imagePhone"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblPhone"
                        android:layout_alignLeft="@id/lblPhone"
                        android:src="@drawable/icon_calendar_"/>
                    <EditText
                        android:id="@+id/txtProjectEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imagePhone"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Project Date of Completion"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="18dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imagePhone"
                        android:inputType="text"
                        android:gravity="left|center"
                        android:textColor="@color/blueBlack"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlOther"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/rlPhone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_relative_layout"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/lblOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/blueBlackDark"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/imageOther"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblOther"
                        android:layout_alignLeft="@id/lblOther"
                        android:src="@drawable/icon_miscellaneous"/>
                    <EditText
                        android:id="@+id/txtOther"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imageOther"
                        android:layout_marginLeft="20dp"
                        android:hint="Enter Additional Information"
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="18dp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@null"
                        android:layout_alignTop="@id/imageOther"
                        android:inputType="text"
                        android:gravity="center|left"
                        android:textColor="@color/blueBlack"/>
                </RelativeLayout>
            </RelativeLayout>
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/fabCreateProject"
                android:layout_below="@id/rlOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/st_patrick_blue"
                android:text="Proceed to assessment"
                android:textColor="@color/white"
                app:iconTint="@color/white"
                android:theme="@style/MyMaterialTheme"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginLeft="80dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>