<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteSmock">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/whiteSmock"
        android:padding="3dp">
        <TextView
            android:id="@+id/txtItemResultPhaseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Project: "
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtItemResultLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtItemResultPhaseName"
            android:layout_alignLeft="@id/txtItemResultPhaseName"
            android:fontFamily="@font/open_sans_regular"
            android:text="Client: "
            android:textColor="@color/emerald_green"
            android:textSize="16dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</RelativeLayout>